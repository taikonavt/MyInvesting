<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_item_info_deal"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <CheckBox
            android:id="@+id/chb_item_info_deal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="visible"
            android:clickable="false"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/tr_info_deal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_info_item_ticker"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_size_for_info_item"
                    tools:text="SBER"
                    android:padding="@dimen/padding_info_deal_item"
                    />

                <TextView
                    android:id="@+id/tv_info_item_date"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_size_for_info_item"
                    tools:text="01/02/17"
                    android:padding="@dimen/padding_info_deal_item"
                    />

                <TextView
                    android:id="@+id/tv_portfolio"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center"
                    android:textAlignment="center"
                    android:padding="@dimen/padding_info_deal_item"
                    android:textSize="@dimen/small_text_size_for_info_item"
                    tools:text="6611001"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_info_item_type"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_size_for_info_item"
                    tools:text="Sell"
                    android:padding="@dimen/padding_info_deal_item"
                    />

                <TextView
                    android:id="@+id/tv_info_item_price"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:textAlignment="center"
                    android:textSize="@dimen/small_text_size_for_info_item"
                    tools:text="162"
                    android:padding="@dimen/padding_info_deal_item"
                    />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:textAlignment="center"
                    android:textSize="@dimen/small_text_size_for_info_item"
                    android:text="x"
                    android:padding="@dimen/padding_info_deal_item"
                    />

                <TextView
                    android:id="@+id/tv_info_item_volume"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:textAlignment="center"
                    android:textSize="@dimen/small_text_size_for_info_item"
                    tools:text="100"
                    android:padding="@dimen/padding_info_deal_item"
                    />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:textAlignment="center"
                    android:textSize="@dimen/small_text_size_for_info_item"
                    android:text="="
                    android:padding="@dimen/padding_info_deal_item"
                    />

                <TextView
                    android:id="@+id/tv_info_item_cost"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center"
                    android:textAlignment="center"
                    android:textSize="@dimen/small_text_size_for_info_item"
                    tools:text="16200"
                    android:padding="@dimen/padding_info_deal_item"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBasket"
        />

</LinearLayout>
