<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:onClick="onPortfolioItemClick"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_portfolio_ticker"
            android:layout_width="@dimen/tv_item_portfolio_ticker"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:padding="@dimen/padding_portfolio_item"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_for_info_item"
            tools:text="SBER" />

        <TextView
            android:id="@+id/tv_item_portfolio_volume"
            android:layout_width="@dimen/tv_item_portfolio_volume"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:padding="@dimen/padding_portfolio_item"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_for_info_item"
            tools:text="160000" />

        <TextView
            android:id="@+id/tv_item_portfolio_price"
            android:layout_width="@dimen/tv_item_portfolio_price"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:padding="@dimen/padding_portfolio_item"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_for_info_item"
            tools:text="160.00"
            android:visibility="gone"
            />

        <ProgressBar
            android:id="@+id/pb_item_portfolio_price"
            android:layout_width="@dimen/tv_item_portfolio_price"
            android:layout_height="@dimen/pb_item_portfolio_height"
            android:layout_gravity="center_vertical|center_horizontal"
            />

        <TextView
            android:id="@+id/tv_item_portfolio_cost"
            android:layout_width="@dimen/tv_item_portfolio_cost"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:padding="@dimen/padding_portfolio_item"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_for_info_item"
            tools:text="160000"
            android:visibility="gone"
            />

        <ProgressBar
            android:id="@+id/pb_item_portfolio_cost"
            android:layout_width="@dimen/tv_item_portfolio_cost"
            android:layout_height="@dimen/pb_item_portfolio_height"
            android:layout_gravity="center_vertical|center_horizontal"
            />

    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBasket"
        />
</LinearLayout>